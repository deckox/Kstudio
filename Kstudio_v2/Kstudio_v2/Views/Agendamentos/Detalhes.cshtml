@model Kstudio_v2.Models.ClienteViewModel

@{ ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@section Scripts{
    <script type="text/javascript" src='@Url.Content("~/Scripts/Agendamentos/editar.js?v3")' asp-append-version="true"></script>

}

<h2>Detalhes do Agendamento</h2>

<body onload="buscarAgendamentos()">


    <div>
        <dl class="dl-horizontal">
            <input type="hidden" id="Id" value="@Model.Id.ToString()" />
            <dt>
                @Html.DisplayNameFor(model => model.Banda)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.Banda)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Responsavel)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.Responsavel)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EstiloMusical)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.EstiloMusical)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.Telefone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AgendamentosViewModel.FirstOrDefault().Data)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.AgendamentosViewModel.FirstOrDefault().Data)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AgendamentosViewModel.FirstOrDefault().HorarioInicio)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.AgendamentosViewModel.FirstOrDefault().HorarioInicio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AgendamentosViewModel.FirstOrDefault().HorarioFinal)
            </dt>

            <dd>
                @Html.DisplayTextFor(model => model.AgendamentosViewModel.FirstOrDefault().HorarioFinal)
            </dd>
        </dl>
    </div>

    <div>
        <h2>Todos os Agendamentos de @Model.Banda.ToString()</h2>

        <table class="table" id="agendamentosDoCliente">
            <tr id="tablelabel">
                <th>
                    @Html.LabelForModel("Id")
                </th>
                <th>
                    @Html.LabelForModel("Banda")
                </th>
                <th>
                    @Html.LabelForModel("Responsável")
                </th>
                <th>
                    @Html.LabelForModel("Data")
                </th>
                <th>
                    @Html.LabelForModel("Horario Inicio")
                </th>
                <th>
                    @Html.LabelForModel("Horario Final")
                </th>
            </tr>
        </table>
    </div>

</body>