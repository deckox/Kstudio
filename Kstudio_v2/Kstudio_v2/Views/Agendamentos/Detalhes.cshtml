@model List<Kstudio_v2.Models.Agendamento>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topnav">
    <a onclick="location.href='@Url.Action("Cadastro", "Clientes" )'">Cadastro</a>
    <a onclick="location.href='@Url.Action("Comanda", "Clientes" )'">Comanda</a>
    <a onclick="location.href='@Url.Action("Pesquisa", "Clientes" )'">Pesquisa</a>
    <a onclick="location.href='@Url.Action("Estoque", "Clientes" )'">Estoque</a>
    <a onclick="location.href='@Url.Action("Site", "Clientes" )'">Site</a>
</div>

<h2>Detalhes do Agendamento</h2>

<div>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.LabelForModel("Id")
            </th>
            <th>
                @Html.LabelForModel("Banda")
            </th>
            <th>
                @Html.LabelForModel("Responsável")
            </th>
            <th>
                @Html.LabelForModel("Data")
            </th>
            <th>
                @Html.LabelForModel("Horario Inicio")
            </th>
            <th>
                @Html.LabelForModel("Horario Final")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Cliente.Banda)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Cliente.Responsavel)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.HorarioInicio)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.HorarioFinal)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id })
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id })
                    @Html.ActionLink("Deletar", "Deletar", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
<div>
    @foreach (var item in Model)
    {
