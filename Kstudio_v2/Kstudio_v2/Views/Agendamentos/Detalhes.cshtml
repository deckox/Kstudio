@model Kstudio_v2.Models.Cliente

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="topnav">
    <a onclick="location.href='@Url.Action("Cadastro", "Clientes" )'">Cadastro</a>
    <a onclick="location.href='@Url.Action("Comanda", "Clientes" )'">Comanda</a>
    <a onclick="location.href='@Url.Action("Pesquisa", "Clientes" )'">Pesquisa</a>
    <a onclick="location.href='@Url.Action("Estoque", "Clientes" )'">Estoque</a>
    <a onclick="location.href='@Url.Action("Site", "Clientes" )'">Site</a>
</div>

<h2>Detalhes do Agendamento</h2>



<div>
    @for (int i = 0; i < Model.Agendamentos.Count; i++)
    {
        var idNumber = (int)ViewBag.id;
        if (Model.Agendamentos[0].Id == idNumber)
        {
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Id)
                </dt>

                <dd>
                    @Html.DisplayTextFor(model => model.Id)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Banda)
                </dt>

                <dd>
                    @Html.DisplayTextFor(model => model.Banda)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Responsavel)
                </dt>

                <dd>
                    @Html.DisplayTextFor(model => model.Responsavel)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Agendamentos[i].Data)
                </dt>

                <dd>
                    @Html.DisplayTextFor(model => model.Agendamentos[i].Data)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Agendamentos[i].HorarioInicio)
                </dt>

                <dd>
                    @Html.DisplayTextFor(model => model.Agendamentos[i].HorarioInicio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Agendamentos[i].HorarioFinal)
                </dt>

                <dd>
                    @Html.DisplayTextFor(model => model.Agendamentos[i].HorarioFinal)
                </dd>
          </dl>
        }
    }
</div>

