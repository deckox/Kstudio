@model Kstudio_v2.Models.Agendamento


@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    <script type="text/javascript" src='@Url.Content("~/Scripts/Agendamentos/cadastro.js?v3")' asp-append-version="true"></script>

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizonta">
        @Html.Raw(ViewData["mensagem"] ?? "")
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="template" class="form-group hide">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" type="text" value="">
            </div>
        </div>
        <h1>Cadastrar Agendamento</h1>
        <div class="form-group">
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.IdCliente, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })*@
                @Html.Label("Id: ")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Banda:")
                <input type="text" list="autocompleteCliente" id="pesquisa" autocomplete="off" />
                <datalist id="autocompleteCliente"></datalist>
                @Html.ActionLink("Novo", "Clientes", "Cadastro")
            </div>
        </div>
        <div id="detalhes">
            @for (int i = 0; i < Model.ListaAgendamentos.Count; i++)
            {
            <div id="detalhe">
                <div class="form-group">
                    <div class="col-md-10">
                            @Html.HiddenFor(model => model.Cliente.Id)
                            @Html.EditorFor(model => model.Data, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.LabelFor(model => model.HorarioInicio)
                            @Html.EditorFor(model => model.HorarioInicio, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.LabelFor(model => model.HorarioFinal)
                            @Html.EditorFor(model => model.HorarioFinal, new {htmlAttributes = new {@class = "form-control"}})
                        <input type="button" id="plus" value="+" class="btn btn-default" onclick="addFieldsAgendamento()" />
                        <input type="button" id="minus" value="-" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="salvar" type="submit" value="Salvar" class="btn-default" />
                <input id="limpar" type="reset" value="Limpar" class="btn-default" />
            </div>
        </div>
    </div>
}
