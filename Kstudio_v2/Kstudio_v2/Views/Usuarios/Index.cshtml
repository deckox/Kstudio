@model List<Kstudio_v2.Models.Usuario>


@{
    ViewBag.Title = "Cadastro de Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.Raw(ViewData["mensagem"] ?? "")
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("Login", "Lista de Usuários")
            @Html.ActionLink("Novo", "Cadastro", "Usuarios", null, null)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" name="campoPesquisar" />
            <input type="submit" value="Pesquisar" class="btn btn-default" />
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.LabelForModel("Id")
            </th>
            <th>
                @Html.LabelForModel("Nome")
            </th>
            <th>
                @Html.LabelForModel("Usuário")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayTextFor(modelitem => item.Id)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Nome.ToLower())
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Login.ToLower())
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { @class = "editar-index", id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Deletar", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
}
