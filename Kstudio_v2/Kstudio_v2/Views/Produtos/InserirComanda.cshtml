@model Kstudio_v2.Models.Produto

@{
    ViewBag.Title = "Inserir Dados na Comanda";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts{
    <script type="text/javascript" src='@Url.Content("~/Scripts/Clientes/cadastro.js?v3" + DateTime.Now.ToLongTimeString())' asp-append-version="true"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.Raw(ViewData["mensagem"] ?? "")
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="topnav">
        <a onclick="location.href='@Url.Action("Cadastro", "Clientes" )'">Cadastro</a>
        <a onclick="location.href='@Url.Action("Comanda", "Clientes" )'">Comanda</a>
        <a onclick="location.href='@Url.Action("Pesquisa", "Clientes" )'">Pesquisa</a>
        <a onclick="location.href='@Url.Action("Estoque", "Clientes" )'">Estoque</a>
        <a onclick="location.href='@Url.Action("Site", "Clientes" )'">Site</a>
    </div>

    <div id="template" class="form-group hide">
	    <label class="control-label col-md-2"></label>
	    <div class="col-md-10">
		    <input class="form-control text-box single-line" type="text" value="" >
	    </div>
    </div>

    <div id="detalhes">
        @for (var i = 0; i < Model.Detalhes.Count; i++)
        {
            <div name="detalhe">
                <div class="form-group">
                    @Html.LabelFor(_ => _.Detalhes[0].Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(_ => _.Detalhes[0].Descricao, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex: Banda(Cantor),Responsavel,Email e Telefone" } })
                        @Html.ValidationMessageFor(_ => _.Detalhes[0].Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Detalhes[0].Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(_ => _.Detalhes[0].Quantidade, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex: Banda(Cantor),Responsavel,Email e Telefone" } })
                        @Html.ValidationMessageFor(_ => _.Detalhes[0].Quantidade, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Detalhes[0].Preco, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(_ => _.Detalhes[0].Preco, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex: Banda(Cantor),Responsavel,Email e Telefone" } })
                        @Html.ValidationMessageFor(_ => _.Detalhes[0].Preco, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.HorasDeEnsaio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.HorasDeEnsaio, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex: Banda(Cantor),Responsavel,Email e Telefone" } })
            @Html.ValidationMessageFor(Model => Model.HorasDeEnsaio, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.ValorTotal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.ValorTotal, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex: Banda(Cantor),Responsavel,Email e Telefone" } })
            @Html.ValidationMessageFor(Model => Model.ValorTotal, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar" class="btn btn-default" />
            <input type="reset" value="Limpar" class="btn btn-default" />
            <input type="button" value="Adicionar Campos" id="add" onclick="addFields()" />
        </div>
    </div>
</div>
}

