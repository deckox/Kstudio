@model List<Kstudio_v2.Models.Agendamento>


@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    <script type="text/javascript" src='@Url.Content("~/Scripts/Agendamentos/cadastro.js?v" + DateTime.Now.ToLongTimeString())' asp-append-version="true"></script>
   
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizonta">
        @Html.Raw(ViewData["mensagem"] ?? "")
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Cadastrar Agendamento")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.IdCliente, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })*@
                @Html.Label("Id: ")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("Banda:")
                <input type="text" name="" id="campoPesquisa" />
                <input type="submit" value="Buscar" class="btn btn-default" />
                @Html.ActionLink("Novo", "Clientes", "Cadastro")
                @Html.ActionLink("Buscar", "BuscarIdBanda", "Agendamento")
            </div>
        </div>
        @*<div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Data)
                    @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.HorarioInicio)
                    @Html.EditorFor(model => model.HorarioInicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.HorarioFinal)
                    @Html.EditorFor(model => model.HorarioFinal, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="salvar" type="submit" value="Salvar" class="btn-default" />
